---

<Layout
  title={env.VITE_APP_TITLE}
  description={env.VITE_APP_DESCRIPTION}
>
  <About client:load />
  <OurService client:load />
  <ContactUs
    emailProps={emailProps}
    client:load
  />
</Layout>

<style is:global>
  .bubble-box-mobile {
    display: none;
  }
  .bubble-box {
    position: relative;
    margin: 240px auto 0;
    width: clamp(70rem, 70rem + 23vw, 111rem);
    display: flex;
    flex-direction: column;
  }
  .bubble-box > div {
    position: inherit;
    display: flex;
    flex-direction: row;
    gap: 149px;
    width: fit-content;
  }
  .bubble-box > div:first-child {
    align-self: flex-start;
  }
  .bubble-box > div:last-child {
    align-self: flex-end;
    top: 20px;
  }

  .orange-bubble-right,
  .orange-bubble-left,
  .blue-bubble-right,
  .blue-bubble-left {
    box-sizing: border-box;
    font-size: 24px;
    font-weight: 700;
    position: relative;
    text-align: center;
    letter-spacing: 1px;
    line-height: 1.8;
    user-select: none;
    width: 338px;
    height: 261px;
    filter: drop-shadow(3px 8px 8px rgba(0, 0, 0, 0.4));
  }
  .orange-bubble-right,
  .orange-bubble-left {
    background-image: url(/assets/index/orangeBubble.webp);
    color: var(--theme-color-hex);
  }
  .orange-bubble-right {
    padding: 104px 0px 0 14px;
    margin-right: 0;
    /* background-image: url(/assets/index/orangeBubble_right.webp); */
  }
  .orange-bubble-left {
    padding: 104px 0px 0 24px;
    margin-left: 0;
    /* background-image: url(/assets/index/orangeBubble_left.webp); */
  }
  .blue-bubble-right,
  .blue-bubble-left {
    background-image: url(/assets/index/blueBubble.webp);
    color: white;
  }
  .blue-bubble-right {
    padding: 91px 5px 0 0px;
    margin-left: auto;
    /* background-image: url(/assets/index/blueBubble_right.webp); */
  }
  .blue-bubble-left {
    padding: 89px 0px 0 5px;
    margin-left: auto;
    /* background-image: url(/assets/index/blueBubble_left.webp); */
  }
  [data-aos='orange-slide-left'],
  [data-aos='blue-slide-left'] {
    transition-property: transform, opacity;
    transform: translateX(-500px);
    opacity: 0;
  }
  [data-aos='orange-slide-left'].aos-animate,
  [data-aos='blue-slide-left'].aos-animate {
    transform: translateX(0);
    opacity: 1;
  }

  [data-aos='orange-slide-right'],
  [data-aos='blue-slide-right'] {
    transition-property: transform, opacity;
    transform: translateX(500px);
    opacity: 0;
  }
  [data-aos='orange-slide-right'].aos-animate,
  [data-aos='blue-slide-right'].aos-animate {
    transform: translateX(0);
    opacity: 1;
  }

  @media (max-width: 1500px) {
    .bubble-box {
      width: 76vw;
    }
    .bubble-box > div {
      gap: 10vw;
    }

    .orange-bubble-right,
    .orange-bubble-left,
    .blue-bubble-right,
    .blue-bubble-left {
      width: 24vw;
      height: 19vw;
    }
  }

  @media (max-width: 768px) {
    .bubble-box {
      display: none;
    }

    .orange-bubble-product,
    .orange-bubble-view,
    .blue-bubble-seo,
    .blue-bubble-time {
      position: relative;
      box-sizing: border-box;
      /* filter: drop-shadow(3px 8px 8px rgba(0, 0, 0, 0.4)); */
      font-size: 1.6rem;
      font-weight: 800;
      height: 16.5rem;
      width: 22rem;
      line-height: 1.8;
      text-align: center;
      user-select: none;
    }
    .orange-bubble-product,
    .orange-bubble-view {
      background-image: url(/assets/index/orangeBubble.webp);
      color: var(--theme-color-hex);
    }
    .orange-bubble-product {
      padding: 6.5rem 0 0 0.8rem;
      margin-right: 0;
    }
    .orange-bubble-view {
      padding: 6.7rem 0 0 0.8rem;
      margin-left: 0;
    }
    .blue-bubble-seo,
    .blue-bubble-time {
      background-image: url(/assets/index/blueBubble.webp);
      color: white;
    }
    .blue-bubble-seo {
      padding: 6rem 0.9rem 0 0rem;
      margin-left: auto;
    }
    .blue-bubble-time {
      padding: 5.3rem 1.5rem 0 0rem;
      margin-left: auto;
    }
    .bubble-box-mobile {
      margin: 3.5rem auto 0;
      width: calc(100% - 2rem);
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }
    .bubble-box-mobile > div {
      display: flex;
      flex-direction: column;
      gap: 19rem;
      margin: unset;
    }
    .bubble-box-mobile > div:first-child {
    }
    .bubble-box-mobile > div:last-child {
      position: relative;
      margin-top: 16rem;
      left: -6rem;
    }
  
    .orange-bubble-product::after,
    .orange-bubble-view::after,
    .blue-bubble-time::after,
    .blue-bubble-seo::after {
      content: '';
      display: block;
      position: absolute;
      width: 14rem;
      height: 14rem;
      background-repeat: no-repeat;
      background-position: center;
      background-size: contain;
    }
    .orange-bubble-product::after {
      background-image: url(/assets/mobile/about/productImage.webp);
      top: 1.3rem;
      left: 21rem;
    }
    .orange-bubble-view::after {
      background-image: url(/assets/mobile/about/viewImage.webp);
      top: 1.3rem;
      left: 20.5rem;
    }
    .blue-bubble-time::after {
      background-image: url(/assets/mobile/about/timeImage.webp);
      top: 3rem;
      left: -12rem;
    }
    .blue-bubble-seo::after {
      background-image: url(/assets/mobile/about/seoImage.webp);
      top: 2.8rem;
      left: -12rem;
    }
  }
</style>
